#################
### Variables ###
#################

# Logo key
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Terminal emulator
set $term termite

# Wallpaper
set $wallpaper ~/Pictures/wallhaven-738mde.png

# Swaylock command
set $swaylock swaylock -i $wallpaper -C ~/.config/swaylock/config

# Application launcher
set $menu bemenu-run -i -w -p "ï€‚" --ifne --no-exec -f -m LVDS-1 -H 24 --fn "Terminus 14" --tb "#282828" --tf "#98971a" --fb "#282828" --ff "#ebdbb2" --nb "#282828" --nf "#928374" --hb "#282828" --hf "#ebdbb2" --sb "#a89984" --sf "#ebdbb2" | xargs swaymsg exec --

# Display name (laptop)
set $laptop_disp LVDS-1


###################
### Appearence ####
###################

### General settings

# Border settings
smart_borders on
default_border pixel 1px
default_floating_border pixel 1px

# Gaps setting
smart_gaps on
gaps inner 10
gaps outer 0

# Font
font pango:Terminus 14px

### Gruvbox theme

# Sway color scheme
# class						border		bground		text		indicator	child_border
client.focused				#b8bb26		#b8bb26		#282828		#6272A4		#b8bb26
